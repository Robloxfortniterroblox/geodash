{
  "name": "geodash",
  "version": "1.0.1",
  "description": "My awesome Geodash game",
  "main": "main.js",
  "author": "teigu",
  "repository": {
    "type": "git",
    "url": "https://github.com/Robloxfortniteroblox/geodash.git"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win"
  },
  "build": {
    "appId": "com.geodash.game",
    "productName": "Geodash",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Robloxfortniterroblox",
        "repo": "geodash"
      }
    ]
  },
  "devDependencies": {
    "@capacitor/cli": "^8.0.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "electron-updater": "^6.1.7"
  }
}
